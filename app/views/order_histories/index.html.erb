<p id="notice"><%= notice %></p>

<h1>Order Histories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_histories.each do |order_history| %>
      <tr>
        <td><%= order_history.title %></td>
        <td><%= order_history.price %></td>
        <td><%= order_history.status %></td>
        <td><%= link_to 'Show', order_history %></td>
        <td><%= link_to 'Edit', edit_order_history_path(order_history) %></td>
        <td><%= link_to 'Destroy', order_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

